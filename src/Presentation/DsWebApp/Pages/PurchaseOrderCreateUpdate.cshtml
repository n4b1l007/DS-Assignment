@page "{id:int?}"
@model DsWebApp.Pages.PurchaseOrderCreateUpdateModel
@{
    ViewData["Title"] = "Purchase Order Entry";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Purchase Order Entry</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Purchase Order Entry</h3>
                    </div>
                    <form id="data-form" form data-parsley-validate>
                        <input asp-for="Id" hidden />
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">Ref ID</label>
                                        <div class="col-sm-6">
                                            <input class="form-control" asp-for="ReferenceId" required placeholder="Ref ID">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">PO Date</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="OrderDate" required placeholder="PO Date">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">Expected Date</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" id="ExpectedDate" required placeholder="Expected Date">
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">PO. No.</label>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control" asp-for="OrderNumber" required placeholder="PO. No.">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">Supplier</label>
                                        <div class="col-sm-6">
                                            <select asp-for="SupplierId" class="form-control" required>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-3 col-form-label">Remarks</label>
                                        <div class="col-sm-6">
                                            <textarea asp-for="Remark" class="form-control" rows="3" placeholder="Remarks"></textarea>

                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="container-fluid">
                                    <table id="ProductionOrderItems"></table>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button id="saveButton" type="button" class="btn btn-primary">Save</button>
                            <button id="cancelButton" type="button" class="btn btn-primary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker@3.1.0/daterangepicker.min.css">
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery.appendgrid@2.1.1/dist/AppendGrid.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.9.2/parsley.min.js" integrity="sha512-eyHL1atYNycXNXZMDndxrDhNAegH2BDWt1TmkXJPoGf1WLlNYt08CSjkqF5lnCRmdm3IrkHid8s2jOUY4NIZVQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment/moment.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js" type="text/javascript"></script>
    <script src="/view/purchase-order-create.js"></script>
}